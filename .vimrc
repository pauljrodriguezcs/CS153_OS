syntax enable		" enable sytnax processing
set tabstop=4		" number of visual spaces per TAB
set softtabstop=4	"number of spaces in tab when editing
set number
set mouse=a
set autoindent
set showmatch
set ruler
set confirm
set undolevels=1000
set hlsearch
setlocal spell spelllang=en_us
set complete+=kspell
